<div id="o-wrapper" class="o-wrapper">


  <div class="show-wrapper-contact">

        <header id="main_navigation">
            <nav>
              <%= link_to "Home", root_path, class: "navigation__link" %>
              <%= link_to "Artigos", posts_path, class: "navigation__link" %>
              <%= link_to "Projetos", projects_path, class: "navigation__link" %>
              <%= link_to "Contato", new_contact_path, class: "navigation__link" %>
              <% if user_signed_in? %>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, id: "sign-out" %>
             <% end %>
            </nav>
        </header>

    <div class="skinny_wrapper wrapper_padding">
      <%= form_for @contact do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name, required: true %>

        <br>

        <%= f.label :email %><br>
        <%= f.text_field :email, required: true %>

        <br>

        <%= f.label :message %><br>
        <%= f.text_area :message, as: :text %>

        <div class="hidden">
          <%= f.label :nickname %><br>
          <%= f.text_field :nickname, hint: 'leave this field blank' %>
        </div>


        <%= f.submit 'Enviar mensagem', class: "button" %>
      <% end %>

    </div>
</div>
