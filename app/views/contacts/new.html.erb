<div id="o-wrapper" class="o-wrapper">
  <div class="show-wrapper-contact">

    <button class="menu-open menu-open--htx">
      <span>toggle menu</span>
    </button>

        <header id="main_navigation">
          <div id="main_navigation">
            <nav class="navbar">
              <div class="links">
                <li><%= link_to "Home", root_path, class: "navigation__link" %></li>
                <li><%= link_to "Meus artigos", posts_path, class: "navigation__link" %></li>
                <li><%= link_to "Meus projetos", projects_path, class: "navigation__link" %></li>
                <li><%= link_to "Contato", new_contact_path, class: "navigation__link" %></li>
                <% if user_signed_in? %>
                  <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, id: "sign-out", class: "navigation__link" %></li>
               <% end %>
             </div>
            </nav>
          </div>

          <script>

          (function() {

              "use strict";

              var toggle = document.querySelector(".menu-open");
              toggleHandler(toggle);

              function toggleHandler(toggle) {
                toggle.addEventListener( "click", function(e) {
                  e.preventDefault();
                  (this.classList.contains("is-active") === true) ? this.classList.remove("is-active") : this.classList.add("is-active");
                });
              }

            })();

            if (document.documentElement.classList.contains('menu-ativo')) {
              document.documentElement.classList.remove('menu-ativo');
            }

            document.querySelector('.menu-open').onclick = function() {
              if (document.documentElement.classList.contains('menu-ativo')) {
                document.documentElement.classList.remove('menu-ativo');
              } else {
                document.documentElement.classList.add('menu-ativo');
              }
            };

          </script>

    <div class="skinny_wrapper wrapper_padding">
      <%= form_for @contact do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name, required: true %>

        <br>

        <%= f.label :email %><br>
        <%= f.text_field :email, required: true %>

        <br>

        <%= f.label :message %><br>
        <%= f.text_area :message, as: :text %>

        <div class="hidden">
          <%= f.label :nickname %><br>
          <%= f.text_field :nickname, hint: 'leave this field blank' %>
        </div>


        <%= f.submit 'Enviar mensagem', class: "button" %>
      <% end %>

    </div>
</div>
