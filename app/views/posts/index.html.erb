<div id="posts" class="posts">

  <div class="show-wrapper-home">

  <script>document.body.className += ' fade-out';</script>
  <script>
    $(function() {
      $('body').removeClass('fade-out');
    });
  </script>

  <div class="show-wrapper">
    <div id="o-wrapper" class="o-wrapper">

      <div class="article-header">
        <h1 class="page_title">“The more that you read, the more things you
          will know.” </h1>
      </div>

      <h1 class="page-category">Meus artigos</h1>
      <div id="posts_wrapper" class="skinny_wrapper">
        <% @posts.each do |post| %>
          <div class="post">
            <p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
            <h2><a href="article_show.html"><%= link_to post.title, post %></a></h2>
            <hr>
          </div>
        <% end %>

        <%= will_paginate @posts %>

      <footer id="main_footer">
        <div class="footer_links">
          <a href="#">Facebook</a>
          <a href="#">Twitter</a>
          <a href="#">GPlus</a>
          <a href="#">Github</a>
        </div>
        <br>

        <p class="copyright-articles">&copy;Donizeti Junior. All rights reserved. 2016</p>
      </footer>
    </div>
  </div>
</div>
