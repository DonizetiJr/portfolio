<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @project.created_at.strftime('%A, %B %d') %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @project.description %>

    <div class="button_wrapper">
      <a href="<%= @project.link %>" class="project_button" target="_blank">Visite <%= @project.title %></a>
    </div>
  </div>

  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Editar", edit_project_path(@project) %>
      <%= link_to "Deletar", project_path(@project), method: :delete, data: {confirm: "VocÃª tem certeza?"} %>
    </div>
  <% end %>

  <hr>

  <footer id="main_footer">
    <div class="footer_links">
      <a href="#">Facebook</a>
      <a href="#">Twitter</a>
      <a href="#">GPlus</a>
      <a href="#">Github</a>
    </div>
    <br>

    <p class="copyright">&copy;Donizeti Junior. All rights reserved. 2016</p>
  </footer>
</div>
